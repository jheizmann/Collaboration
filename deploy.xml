<?xml version="1.0" encoding="UTF-8"?>
<deploydescriptor>
	<global>
		<version>100</version>
		<id>collaboration</id>
		<vendor>Ontoprise GmbH</vendor>
		<instdir>extensions/Collaboration</instdir>
		<description>
			Add fancy collaboration stuff to your wiki.
		</description>
		<dependencies>
			<dependency from="1151">mw</dependency>
			<dependency from="143">smw</dependency>
			<dependency from="146">SMWHalo</dependency>
			<dependency from="100">applicationprogramming</dependency>
			<dependency from="145">semanticresultformats</dependency>
		</dependencies>
	</global>
	<codefiles>
		<file loc="extensions/Collaboration/deploy.xml" />
		<!-- TODO: add others -->
	</codefiles>
	<wikidumps>
		<file loc="extensions/Collaboration/import/collaboration.xml"/>
	</wikidumps>
	<resources>
		<file loc="/extensions/Collaboration/skins/Comment/icons/defaultuser.gif" />
		<file loc="/extensions/Collaboration/skins/Comment/icons/good_active.png" />
		<file loc="/extensions/Collaboration/skins/Comment/icons/neutral_active.png" />
		<file loc="/extensions/Collaboration/skins/Comment/icons/bad_active.png" />
		<file loc="/extensions/Collaboration/skins/Comment/icons/Comment_icon_crystal.png" />
	</resources>
	<configs>
		<new>
			<require name="ce_init"
				file="extensions/Collaboration/includes/CE_Initialize.php" />
			<function name="enableCollaborationExtension">
			</function>
		</new>
	</configs>
